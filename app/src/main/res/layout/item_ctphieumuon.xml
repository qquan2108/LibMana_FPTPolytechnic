<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">

    <LinearLayout
     android:background="#48BFF4"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:src="@drawable/ctpm"
            android:layout_weight="2"
            android:layout_marginEnd="10dp"/>

        
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtCTPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id : 1"
                android:textSize="24dp"
                android:textStyle="bold"
                />
            
            <TextView
                android:id="@+id/txtmapm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MApm"

                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtMaSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ma sach"

                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtSoLuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SoLuong"

                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtTenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ten sach"

                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txttrangthai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="trang thanh"

                android:textSize="20dp"
                />
            <Button
                android:id="@+id/btntrasach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trả sách "
                >

            </Button>

        </LinearLayout>

        <ImageView

            android:id="@+id/ivEdit"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/edit1"/>
        <ImageView
            android:id="@+id/ivDele"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/delete"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>