<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:background="#2DAAE3"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/sach2"
            android:layout_weight="2"
            android:layout_gravity="center"/>

        
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtMaLoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id : 1"
                android:textSize="24dp"
                android:textStyle="bold"
                />
            
            <TextView
                android:id="@+id/txtTensach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hanh dong"

                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtTacGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tac gia"

                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtGiaBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gia ban"

                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtTenloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The loai"

                android:textSize="20dp"
                />
        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivEdit"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/edit1"/>
        <ImageView
            android:id="@+id/ivDele"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/delete"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>